		"posts",
		"grid",
		"blog",
		"archive"
	],
	"textdomain": "seed-components",
	"acf": {
		"mode": "preview",
		"renderTemplate": "template.php",
		"validate": false
	},
	"supports": {
		"align": [
			"wide",
			"full"
		],
		"anchor": true,
		"html": false
	}
}

