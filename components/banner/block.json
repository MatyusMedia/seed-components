	"description": "A customizable banner component with title, text, and optional image.",
	"style": ["file:./style.css"],
	"editorStyle": ["file:./editor.css"],
	"category": "seed-components",
	"icon": "admin-comments",
	"keywords": [
		"banner",
		"hero",
		"header"
	],
	"textdomain": "seed-components",
	"acf": {
		"mode": "preview",
		"renderTemplate": "template.php",
		"validate": false
	},
	"supports": {
		"align": [
			"wide",
			"full"
		],
		"anchor": true,
		"html": false
	}
}

